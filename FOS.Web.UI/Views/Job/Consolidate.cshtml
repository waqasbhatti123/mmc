<script type="text/javascript">
    function exportToExcel() {
        window.location = '/job/ExportToExcelConsolidate?soId='
            + $('#saleOfficer').val() + '&month='
            + $('#month').val() + '&startDate='
            + $('#StartDate').val() + '&endDate='
            + $('#EndDate').val();
    }
    $(document).ready(function () {

        $("input[name=StartDate]").datepicker({
            dateFormat: 'dd-M-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '1950:2100'
        });
        $("input[name=EndDate]").datepicker({
            dateFormat: 'dd-M-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '1950:2100'
        });
    });

</script>