                                    if (json != null) {


                                        var $el = $("#external-events");
                                        $el.empty(); // remove old options
                                        $("#external-events").append(json.Response);

                                        a = [];
                                        b = [];

                                        $.each(json.EditRetailer, function (value, key) {
